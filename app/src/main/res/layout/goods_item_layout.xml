<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="200dp"
  android:clickable="true"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/phone_icon_iv"
    android:layout_width="100dp"
    android:layout_height="100dp"
    tools:background="@drawable/iphone_8" />

  <TextView
    android:id="@+id/phone_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_toRightOf="@id/phone_icon_iv"
    android:maxLines="2"
    android:textColor="@android:color/black"
    android:textSize="15sp"
    tools:text="苹果(Apple)苹果XR 64GB白色 移动联通电信4G全面屏手机" />

  <TextView
    android:id="@+id/phone_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/phone_desc"
    android:layout_marginTop="10dp"
    android:layout_toRightOf="@id/phone_icon_iv"
    android:textColor="#FFFE7500"
    android:textSize="15sp"
    tools:text="Y4588" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/phone_icon_iv"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="#888888" />
</RelativeLayout>